import React, { useState, useEffect, useRef } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { 
  AlertTriangle, 
  Map as MapIcon, 
  Wind, 
  Droplet, 
  Target, 
  Layers, 
  FileText, 
  ChevronRight, 
  Search,
  Activity,
  Maximize2,
  Sparkles,
  MessageSquare,
  X,
  Send,
  Bot
} from 'lucide-react';
import { LineChart, Line, XAxis, YAxis, Tooltip, ResponsiveContainer, AreaChart, Area } from 'recharts';

// --- Types ---
type Casualty = {
  id: string;
  lat: number;
  lng: number;
  status: 'dead' | 'critical';
};

type PlantationData = {
  name: string;
  total: number;
  survivalRate: number;
  casualties: Casualty[];
  soilMoisture: number;
  history: { month: string; rate: number }[];
};

type AIMessage = {
  role: 'user' | 'model';
  text: string;
};

// --- Mock Data ---
