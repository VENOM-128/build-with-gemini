// --- Components ---

const GlassCard = ({ children, className = "" }: { children: React.ReactNode, className?: string }) => (
  <div className={`backdrop-filter backdrop-blur-xl bg-gray-900/60 border border-white/10 rounded-2xl p-6 shadow-2xl ${className}`}>
    {children}
  </div>
);

const ComparisonSlider = () => {
  const [sliderVal, setSliderVal] = useState(50);
  
  return (
    <div className="relative w-full h-64 rounded-xl overflow-hidden border border-white/20 group">
      {/* Underlying Image (After - Saplings) */}
      <div className="absolute inset-0 bg-emerald-900/40 flex items-center justify-center">
        <div className="grid grid-cols-6 gap-4 opacity-50">
           {[...Array(24)].map((_, i) => (
             <div key={i} className="w-8 h-8 rounded-full bg-emerald-400 blur-sm"></div>
           ))}
        </div>
        <span className="absolute bottom-2 right-2 text-xs text-emerald-300 font-mono bg-black/50 px-2 py-1 rounded">OP3: POST-PLANTING</span>
      </div>

      {/* Overlay Image (Before - Pits) - Clipped */}
      <div 
        className="absolute inset-0 bg-amber-900/40 border-r-2 border-white flex items-center justify-center overflow-hidden"
        style={{ width: `${sliderVal}%` }}
      >
        <div className="grid grid-cols-6 gap-4 opacity-50 w-full h-full absolute top-8 left-8">
           {[...Array(24)].map((_, i) => (
             <div key={i} className="w-8 h-8 rounded-full border-2 border-amber-500/50"></div>
           ))}
        </div>
        <span className="absolute bottom-2 left-2 text-xs text-amber-300 font-mono bg-black/50 px-2 py-1 rounded">OP1: PITS ONLY</span>
      </div>

      {/* Slider Handle */}
      <input 
        type="range" 
        min="0" 
        max="100" 
        value={sliderVal} 
        onChange={(e) => setSliderVal(parseInt(e.target.value))}
        className="absolute inset-0 w-full h-full opacity-0 cursor-ew-resize z-20"
      />
      <div 
        className="absolute top-0 bottom-0 w-1 bg-white shadow-[0_0_10px_rgba(255,255,255,0.8)] z-10 pointer-events-none transition-transform"
        style={{ left: `${sliderVal}%` }}
      >
        <div className="absolute top-1/2 -translate-y-1/2 -left-3 w-7 h-7 bg-white rounded-full flex items-center justify-center shadow-lg text-black">
          <Layers size={14} />
        </div>
      </div>
    </div>
  );
};

// --- API Helpers ---
const apiKey = "AIzaSyC59Ist3QTe58OdGDSvkWvxFgEfZaSvylA"; // Injected by environment

async function callGemini(prompt: string, systemInstruction?: string): Promise<string> {
  if (!apiKey) return "Error: API Key not found.";

  try {
    const response = await fetch(
      `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`,
      {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          contents: [{ parts: [{ text: prompt }] }],
          systemInstruction: systemInstruction ? { parts: [{ text: systemInstruction }] } : undefined,
        }),
      }
    );

    const data = await response.json();
    return data.candidates?.[0]?.content?.parts?.[0]?.text || "No analysis available.";
  } catch (error) {
    console.error("Gemini API Error:", error);
    return "Connection to AI Core failed.";
  }
}

export default function MissionControl() {
  const [activeSite, setActiveSite] = useState<PlantationData>(DB_DATA);
  const [isScanning, setIsScanning] = useState(true);
  const [viewMode, setViewMode] = useState<'map' | 'heat'>('map');
  const [selectedCasualty, setSelectedCasualty] = useState<string | null>(null);
  
  // AI State
  const [showAIModal, setShowAIModal] = useState(false);
  const [aiLoading, setAiLoading] = useState(false);
  const [aiChatInput, setAiChatInput] = useState("");
  const [aiMessages, setAiMessages] = useState<AIMessage[]>([]);
  const chatEndRef = useRef<HTMLDivElement>(null);

  useEffect(() => {
    const timer = setTimeout(() => setIsScanning(false), 3000);
    return () => clearTimeout(timer);
  }, [activeSite]);

  // Scroll to bottom of chat
  useEffect(() => {
    chatEndRef.current?.scrollIntoView({ behavior: 'smooth' });
  }, [aiMessages]);

  const generateReport = () => {
    // In production, this would use jspdf
    const printWindow = window.open('', '', 'width=800,height=600');
    if (printWindow) {
      printWindow.document.write(`
        <html>
          <head><title>Casualty Report - ${activeSite.name}</title></head>
          <body style="font-family: monospace; padding: 40px;">
            <h1>ODISHA FOREST DEPARTMENT</h1>
            <h2>AUTOMATED REPLANTATION ORDER</h2>
            <hr/>
            <p><strong>SITE:</strong> ${activeSite.name}</p>
            <p><strong>DATE:</strong> ${new Date().toLocaleDateString()}</p>
            <p><strong>CASUALTIES DETECTED:</strong> ${activeSite.casualties.length}</p>
            <h3>COORDINATES FOR FIELD STAFF:</h3>
            <ul>
              ${activeSite.casualties.map(c => `<li>ID: ${c.id} | LOC: ${c.lat.toFixed(4)}, ${c.lng.toFixed(4)}</li>`).join('')}
            </ul>
            <hr/>
            <p>Generated by Plantation AI System</p>
          </body>
        </html>
      `);
      printWindow.document.close();
      printWindow.print();
    }
  };

  const startAIAnalysis = async () => {
    setShowAIModal(true);
    setAiMessages([]);
    setAiLoading(true);

    const systemPrompt = "You are SILVICS-AI, a military-grade forestry analytics intelligence. Analyze plantation data and provide concise, tactical situation reports. Use professional, data-driven language.";
    
    const userPrompt = `
      Generate a SITREP (Situation Report) for:
      Site Name: ${activeSite.name}
      Current Survival Rate: ${activeSite.survivalRate}%
      Total Casualties: ${activeSite.casualties.length}
      Soil Moisture: ${activeSite.soilMoisture}%
      Trend Data: ${JSON.stringify(activeSite.history)}

      Format:
      [STATUS]: (CRITICAL / CAUTION / NOMINAL based on survival rate < 90 is caution, < 80 critical)
      [ANALYSIS]: (Brief correlation of moisture vs casualties)
      [DIRECTIVES]: (3 actionable bullet points for the Range Officer)
    `;

    const result = await callGemini(userPrompt, systemPrompt);
    
    setAiMessages([{ role: 'model', text: result }]);
    setAiLoading(false);
  };

  const handleAIChat = async (e: React.FormEvent) => {
    e.preventDefault();
    if (!aiChatInput.trim() || aiLoading) return;

    const userMsg = aiChatInput;
    setAiChatInput("");
    setAiMessages(prev => [...prev, { role: 'user', text: userMsg }]);
    setAiLoading(true);

    const systemPrompt = `You are SILVICS-AI, monitoring ${activeSite.name}. 
    Context: Survival ${activeSite.survivalRate}%, Casualties ${activeSite.casualties.length}, Moisture ${activeSite.soilMoisture}%.
    Answer brief and tactically.`;

    const result = await callGemini(userMsg, systemPrompt);
    
    setAiMessages(prev => [...prev, { role: 'model', text: result }]);
    setAiLoading(false);
  };

  return (
    <div className="min-h-screen bg-[#050505] text-white font-sans overflow-hidden selection:bg-emerald-500/30">
      
      {/* --- Background Ambient Mesh --- */}
      <div className="fixed inset-0 z-0 opacity-20 pointer-events-none">
        <div className="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] bg-emerald-900 rounded-full blur-[120px]" />
        <div className="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] bg-blue-900 rounded-full blur-[120px]" />
      </div>

      {/* --- Header --- */}
      <header className="relative z-20 flex items-center justify-between px-8 py-4 border-b border-white/10 bg-black/40 backdrop-blur-md">
        <div className="flex items-center gap-3">
          <div className="w-10 h-10 rounded bg-gradient-to-br from-emerald-500 to-emerald-700 flex items-center justify-center shadow-[0_0_15px_rgba(16,185,129,0.4)]">
            <Target className="text-white" />
          </div>
          <div>
            <h1 className="text-xl font-bold tracking-wider">SPECTRAL <span className="text-emerald-400">SCOUT</span></h1>
            <p className="text-xs text-gray-400 font-mono tracking-widest">IIT KGP // FOREST ANALYTICS</p>
          </div>
        </div>
        
        <div className="flex gap-4">
          <button 
            onClick={() => setActiveSite(DB_DATA)}
            className={`px-4 py-2 rounded-lg text-sm font-medium transition-all ${activeSite.name === "Debadihi VF" ? 'bg-white/10 text-white border border-emerald-500/50' : 'text-gray-500 hover:text-white'}`}
          >
            Debadihi VF
          </button>
          <button 
            onClick={() => setActiveSite(BNK_DATA)}
            className={`px-4 py-2 rounded-lg text-sm font-medium transition-all ${activeSite.name === "Benkmura VF" ? 'bg-white/10 text-white border border-emerald-500/50' : 'text-gray-500 hover:text-white'}`}
          >
            Benkmura VF
          </button>
        </div>

        <div className="flex gap-3">
          <button 
            onClick={startAIAnalysis}
            className="flex items-center gap-2 bg-indigo-600 hover:bg-indigo-500 text-white px-5 py-2 rounded-lg text-sm font-semibold shadow-lg shadow-indigo-900/20 transition-all hover:scale-105"
          >
            <Sparkles size={16} /> Neural Analysis
          </button>

          <button 
            onClick={generateReport}
            className="flex items-center gap-2 bg-emerald-600 hover:bg-emerald-500 text-white px-5 py-2 rounded-lg text-sm font-semibold shadow-lg shadow-emerald-900/20 transition-all hover:scale-105"
          >
            <FileText size={16} /> Export Order
          </button>
        </div>
      </header>

      {/* --- Main Grid --- */}
      <main className="relative z-10 p-6 grid grid-cols-12 gap-6 h-[calc(100vh-80px)]">
        
        {/* --- Left Column: Stats --- */}
        <div className="col-span-4 flex flex-col gap-6 overflow-y-auto pr-2 custom-scrollbar">
          <GlassCard className="border-l-4 border-l-emerald-500">
            <h3 className="text-gray-400 text-xs font-mono uppercase mb-1">Survival Rate</h3>
            <div className="flex items-end gap-3">
              <span className="text-4xl font-bold tracking-tighter text-white">{activeSite.survivalRate}%</span>
              <span className="text-emerald-400 text-sm mb-2 flex items-center gap-1">
                <Activity size={12} /> Live
              </span>
            </div>
          </GlassCard>

          <div className="grid grid-cols-2 gap-4">
             <GlassCard className="p-4">
               <div className="flex items-center gap-2 text-gray-400 mb-2"><Wind size={14} /> <span className="text-xs">Casualties</span></div>
               <div className="text-2xl font-bold text-red-400">{activeSite.casualties.length}</div>
             </GlassCard>
             <GlassCard className="p-4">
               <div className="flex items-center gap-2 text-gray-400 mb-2"><Droplet size={14} /> <span className="text-xs">Moisture</span></div>
               <div className="text-2xl font-bold text-blue-400">{activeSite.soilMoisture}%</div>
             </GlassCard>
          </div>

          <GlassCard>
            <h3 className="text-gray-400 text-xs font-mono uppercase mb-4">Survival Trend (YTD)</h3>
            <div className="h-40 -ml-4">
              <ResponsiveContainer width="100%" height="100%">
                <AreaChart data={activeSite.history}>
                  <defs>
                    <linearGradient id="colorRate" x1="0" y1="0" x2="0" y2="1">
                      <stop offset="5%" stopColor="#10b981" stopOpacity={0.3}/>
                      <stop offset="95%" stopColor="#10b981" stopOpacity={0}/>
                    </linearGradient>
                  </defs>
                  <Tooltip 
                    contentStyle={{ backgroundColor: '#111', borderColor: '#333' }}
                    itemStyle={{ color: '#10b981' }} 
                  />
                  <Area type="monotone" dataKey="rate" stroke="#10b981" fillOpacity={1} fill="url(#colorRate)" />
                </AreaChart>
              </ResponsiveContainer>
            </div>
          </GlassCard>

          <GlassCard>
             <h3 className="text-gray-400 text-xs font-mono uppercase mb-4">Imagery Comparison</h3>
             <ComparisonSlider />
             <p className="text-xs text-center text-gray-500 mt-2">Drag slider to compare OP1 (Pits) vs OP3 (Growth)</p>
          </GlassCard>
        </div>

        {/* --- Center: The Map --- */}
        <div className="col-span-5 relative flex flex-col gap-4">
           {/* Map Toolbar */}
           <div className="absolute top-4 left-4 right-4 z-20 flex justify-between items-start pointer-events-none">
              <div className="flex gap-2 pointer-events-auto">
                 <button 
                  onClick={() => setViewMode('map')}
                  className={`p-2 rounded-lg backdrop-blur-md border border-white/10 ${viewMode === 'map' ? 'bg-emerald-500 text-white' : 'bg-black/50 text-gray-400'}`}
                 >
                   <MapIcon size={18} />
                 </button>
                 <button 
                  onClick={() => setViewMode('heat')}
                  className={`p-2 rounded-lg backdrop-blur-md border border-white/10 ${viewMode === 'heat' ? 'bg-red-500 text-white' : 'bg-black/50 text-gray-400'}`}
                 >
                   <Layers size={18} />
                 </button>
              </div>
              <div className="bg-black/60 backdrop-blur-md px-3 py-1 rounded border border-white/10 text-xs font-mono text-emerald-400 pointer-events-auto">
                 LIVE FEED: DRONE-7A
              </div>
           </div>

           {/* The Map Renderer */}
           <div className="flex-1 rounded-2xl border border-white/10 bg-[#0a0a0a] relative overflow-hidden group shadow-2xl">
              
              {/* Grid Lines */}
              <div 
                className="absolute inset-0 opacity-20 pointer-events-none" 
                style={{ 
                   backgroundImage: `linear-gradient(#333 1px, transparent 1px), linear-gradient(90deg, #333 1px, transparent 1px)`,
                   backgroundSize: '40px 40px'
                }} 
              />

              {/* Casualties Layer */}
              <AnimatePresence>
                {activeSite.casualties.map((c, i) => (
                  <motion.div
                    key={c.id}
                    initial={{ scale: 0, opacity: 0 }}
                    animate={{ scale: 1, opacity: viewMode === 'heat' ? 0.6 : 1 }}
                    exit={{ scale: 0, opacity: 0 }}
                    transition={{ delay: i * 0.02 }}
                    className={`absolute cursor-pointer transform -translate-x-1/2 -translate-y-1/2 transition-all duration-300
                      ${selectedCasualty === c.id ? 'z-50 scale-150' : 'z-10'}
                    `}
                    style={{ left: c.lng, top: c.lat }}
                    onClick={() => setSelectedCasualty(c.id)}
                  >
                    {viewMode === 'map' ? (
                       // Map Mode: Icons
                       <div className="relative group">
                          <div className={`w-3 h-3 rotate-45 border ${c.status === 'dead' ? 'border-red-500 bg-red-500/20' : 'border-yellow-500 bg-yellow-500/20'} transition-colors`}></div>
                          {selectedCasualty === c.id && (
                             <div className="absolute top-[-30px] left-1/2 -translate-x-1/2 bg-black/80 px-2 py-1 rounded text-[10px] whitespace-nowrap border border-white/20">
                               ID: {c.id}
                             </div>
                          )}
                          {/* Pulsing effect for dead ones */}
                          {c.status === 'dead' && (
                             <div className="absolute inset-0 border border-red-500 rotate-45 animate-ping opacity-50"></div>
                          )}
                       </div>
                    ) : (
                       // Heatmap Mode: Blurry blobs
                       <div className="w-16 h-16 bg-red-500/30 blur-xl rounded-full"></div>
                    )}
                  </motion.div>
                ))}
              </AnimatePresence>

               {/* Scanning Overlay Animation */}
               {isScanning && (
                  <motion.div 
                    initial={{ top: '-10%' }}
                    animate={{ top: '110%' }}
                    transition={{ duration: 3, ease: "linear", repeat: Infinity }}
                    className="absolute left-0 right-0 h-20 bg-gradient-to-b from-transparent via-emerald-500/20 to-transparent pointer-events-none border-b border-emerald-500/50 shadow-[0_0_20px_rgba(16,185,129,0.3)]"
                  />
               )}
           </div>
        </div>

        {/* --- Right Column: Action List --- */}
        <div className="col-span-3 flex flex-col h-full overflow-hidden">
           <div className="flex items-center justify-between mb-4">
              <h3 className="font-mono text-sm text-gray-400">CASUALTY LOG</h3>
              <span className="text-xs bg-red-500/20 text-red-400 px-2 py-0.5 rounded border border-red-500/30">
                ACTION REQ.
              </span>
           </div>

           <div className="flex-1 overflow-y-auto custom-scrollbar space-y-3 pr-2">
              {activeSite.casualties.map((c) => (
                <motion.div 
                  key={c.id}
                  layoutId={c.id}
                  onClick={() => setSelectedCasualty(c.id)}
                  className={`p-3 rounded-lg border cursor-pointer transition-all group
                    ${selectedCasualty === c.id 
                      ? 'bg-red-500/20 border-red-500' 
                      : 'bg-white/5 border-white/5 hover:bg-white/10 hover:border-white/20'
                    }
                  `}
                >
                  <div className="flex justify-between items-start">
                    <div>
                      <div className="flex items-center gap-2">
                         <AlertTriangle size={14} className={c.status === 'dead' ? 'text-red-500' : 'text-yellow-500'} />
                         <span className="font-mono text-sm font-bold text-gray-200">{c.id}</span>
                      </div>
                      <div className="text-xs text-gray-500 mt-1 font-mono">
                        LOC: {c.lat.toFixed(4)}, {c.lng.toFixed(4)}
                      </div>
                    </div>
                    <button className="opacity-0 group-hover:opacity-100 transition-opacity bg-white/10 p-1.5 rounded hover:bg-white/20">
                       <Target size={14} />
                    </button>
                  </div>
                </motion.div>
              ))}
           </div>
        </div>

      </main>

      {/* --- AI Analysis Modal --- */}
      <AnimatePresence>
        {showAIModal && (
          <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm p-4"
          >
            <motion.div
              initial={{ scale: 0.9, y: 20 }}
              animate={{ scale: 1, y: 0 }}
              exit={{ scale: 0.9, y: 20 }}
              className="bg-gray-900 border border-indigo-500/30 w-full max-w-2xl h-[70vh] rounded-2xl shadow-2xl flex flex-col overflow-hidden"
            >
              {/* Modal Header */}
              <div className="bg-gradient-to-r from-indigo-900/50 to-gray-900 p-4 border-b border-white/10 flex justify-between items-center">
                <div className="flex items-center gap-2">
                  <div className="bg-indigo-500/20 p-2 rounded-lg border border-indigo-500/50">
                     <Bot className="text-indigo-400" size={20} />
                  </div>
                  <div>
                    <h3 className="text-lg font-bold text-indigo-300">SILVICS AI CORE</h3>
                    <p className="text-[10px] text-gray-400 font-mono tracking-widest">TACTICAL FOREST INTELLIGENCE</p>
                  </div>
                </div>
                <button 
                  onClick={() => setShowAIModal(false)}
                  className="p-2 hover:bg-white/10 rounded-full transition-colors text-gray-400 hover:text-white"
                >
                  <X size={20} />
                </button>
              </div>

              {/* Chat Content */}
              <div className="flex-1 overflow-y-auto p-4 space-y-4 custom-scrollbar bg-black/20">
                 {aiMessages.map((msg, i) => (
                   <div key={i} className={`flex ${msg.role === 'user' ? 'justify-end' : 'justify-start'}`}>
                     <div className={`max-w-[80%] rounded-xl p-4 text-sm whitespace-pre-line leading-relaxed
                       ${msg.role === 'user' 
                         ? 'bg-indigo-600/20 border border-indigo-500/30 text-indigo-100 rounded-tr-none' 
                         : 'bg-gray-800/80 border border-white/10 text-gray-200 rounded-tl-none font-mono shadow-lg'}
                     `}>
                       {msg.role === 'model' && <Sparkles size={12} className="inline mr-2 text-indigo-400 mb-1" />}
                       {msg.text}
                     </div>
                   </div>
                 ))}
                 {aiLoading && (
                   <div className="flex justify-start">
                     <div className="bg-gray-800/50 border border-white/5 p-4 rounded-xl rounded-tl-none flex items-center gap-2">
                       <div className="w-2 h-2 bg-indigo-500 rounded-full animate-bounce" style={{ animationDelay: '0s' }}></div>
                       <div className="w-2 h-2 bg-indigo-500 rounded-full animate-bounce" style={{ animationDelay: '0.2s' }}></div>
                       <div className="w-2 h-2 bg-indigo-500 rounded-full animate-bounce" style={{ animationDelay: '0.4s' }}></div>
                     </div>
                   </div>
                 )}
                 <div ref={chatEndRef} />
              </div>

              {/* Input Area */}
              <form onSubmit={handleAIChat} className="p-4 bg-gray-900 border-t border-white/10">
                <div className="flex gap-2">
                  <input
                    type="text"
                    value={aiChatInput}
                    onChange={(e) => setAiChatInput(e.target.value)}
                    placeholder="Ask Silvics Intelligence (e.g., 'Draft a replanting plan')..."
                    className="flex-1 bg-black/40 border border-white/10 rounded-lg px-4 py-3 text-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 transition-all placeholder-gray-600 text-white"
                  />
                  <button 
                    type="submit"
                    disabled={aiLoading}
                    className="bg-indigo-600 hover:bg-indigo-500 disabled:opacity-50 disabled:cursor-not-allowed text-white px-4 rounded-lg transition-colors flex items-center justify-center"
                  >
                    <Send size={18} />
                  </button>
                </div>
              </form>
            </motion.div>
          </motion.div>
        )}
      </AnimatePresence>

      <style>{`
        .custom-scrollbar::-webkit-scrollbar {
          width: 4px;
        }
        .custom-scrollbar::-webkit-scrollbar-track {
          background: rgba(255, 255, 255, 0.05);
        }
        .custom-scrollbar::-webkit-scrollbar-thumb {
          background: rgba(255, 255, 255, 0.2);
          border-radius: 10px;
        }
      `}</style>
    </div>
  );
